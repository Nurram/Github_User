<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">

    <ImageView
        android:id="@+id/item_poster"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:contentDescription="@string/movie_cover"
        android:src="@drawable/poster_venom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/item_poster"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A Star Is Born" />

    <TextView
        android:id="@+id/item_released"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/item_poster"
        android:text="@string/released_at"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_poster"
        app:layout_constraintTop_toBottomOf="@+id/item_title"/>

    <TextView
        android:id="@+id/item_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_released"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/item_poster"
        android:text="@string/avg_vote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_poster"
        app:layout_constraintTop_toBottomOf="@+id/item_released" />

    <TextView
        android:id="@+id/item_overview_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_director"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/item_poster"
        android:text="@string/overview"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_poster"
        app:layout_constraintTop_toBottomOf="@+id/item_director" />

    <TextView
        android:id="@+id/item_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_overview_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/item_poster"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_poster"
        app:layout_constraintTop_toBottomOf="@+id/item_overview_text"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Seasoned musician Jackson Maine discovers
         and falls in love with struggling artist Ally" />
</androidx.constraintlayout.widget.ConstraintLayout>